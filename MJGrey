!#/bin/bash

#This is an automated script to create desktop folders and download vulnhub vms 
#for pentesting.

echo "Creating Desktop Folders"

cd ~/Desktop

mkdir vuln_Hub

cd vuln_Hub

mkdir beginner
mkdir intermediate
mkdir random
mkdir difficult

cd ~/Desktop/vuln_Hub/beginner

mkdir kioptrix
mkdir fristi_Leaks
mkdir stapler
mkdir pwn_Labs_init
mkdir necromancer
mkdir bWAPP_BeeBox
mkdir oWASP_BWAP

