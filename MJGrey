wget -P ~/Desktop/vuln_Hub/beginner/fristi_Leaks https://download.vulnhub.com/fristileaks/FristiLeaks_1.3.ova

wget -P ~/Desktop/vuln_Hub/beginner/stapler https://download.vulnhub.com/stapler/Stapler.zip

wget -P ~/Desktop/vuln_Hub/beginner/pwn_Labs_init https://download.vulnhub.com/pwnlab/pwnlab_init.ova 

wget -P ~/Desktop/vuln_Hub/beginner/necromancer https://download.vulnhub.com/necromancer/necromancer.ova

